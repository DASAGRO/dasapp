<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.MaterialComponents.Button.DAS" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">14dp</item>
        <item name="android:paddingEnd">14dp</item>
        <item name="android:radius">6dp</item>
        <item name="android:background">@drawable/selectable_default_button_background</item>
    </style>

    <style name="Widget.MaterialComponents.Button.Green.DAS" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">14dp</item>
        <item name="android:paddingEnd">14dp</item>
        <item name="android:radius">6dp</item>
        <item name="android:background">@drawable/selectable_green_button_background</item>
    </style>

    <style name="StyledTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Widget.MaterialComponents.Button.DAS.Red" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">14dp</item>
        <item name="android:paddingEnd">14dp</item>
        <item name="android:radius">6dp</item>
        <item name="android:background">@drawable/selectable_default_button_background_red</item>
    </style>

    <style name="Widget.MaterialComponents.TextView.DAS" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/selectable_text_color_primary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">25dp</item>
        <item name="android:paddingEnd">25dp</item>
    </style>

    <!-- Banner animation-->
    <style name="bannerTopAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/zoom_in</item>
        <item name="android:windowExitAnimation">@anim/zoom_out</item>
    </style>
    <!-- end -->

    <!-- Full Screen Dialog -->
    <style name="DialogFullScreenTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <!-- TextLayout style -->
    <style name="Widget.MaterialComponents.TextInputLayout.OutlinedBox.DAS" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="endIconDrawable">@drawable/ic_close_input</item>
        <item name="endIconMode">clear_text</item>
        <item name="hintEnabled">true</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="errorIconDrawable">@drawable/ic_error_input</item>
        <item name="hintTextColor">@color/purple_700_pressed</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeColor">@color/purple_700_pressed</item>
    </style>

    <style name="Theme.Fab_Bottom_app_bar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#0F9D58</item>
        <item name="colorPrimaryVariant">#0F9D58</item>
        <item name="colorOnPrimary">#000</item>
    </style>

    <!-- TextField style -->
    <style name="Widget.MaterialComponents.TextInputEditText.DAS" parent="Widget.AppCompat.EditText">
        <item name="singleLine">true</item>
        <item name="android:padding">6dp</item>
        <item name="android:textColor">@color/purple_700</item>
        <item name="hintTextColor">@color/color_grey</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Dialogs-->
    <style name="DialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>


    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/default_shape_top_corner_16dp</item>
    </style>

</resources>