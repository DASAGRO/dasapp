<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.MaterialComponents.Button.DAS" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">14dp</item>
        <item name="android:radius">6dp</item>
        <item name="android:background">@drawable/selectable_default_button_background</item>
    </style>


    <style name="Widget.MaterialComponents.TextView.DAS" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/selectable_text_color_primary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">25dp</item>
        <item name="android:paddingEnd">25dp</item>
    </style>

    <!-- Banner animation-->
    <style name="bannerTopAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/banner_enter_up_to_down</item>
        <item name="android:windowExitAnimation">@anim/banner_exit_down_to_up</item>
    </style>
    <!-- end -->

    <!-- TextLayout style -->
    <style name="Widget.MaterialComponents.TextInputLayout.OutlinedBox.DAS" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="endIconDrawable">@drawable/ic_close_input</item>
        <item name="endIconMode">clear_text</item>
        <item name="hintEnabled">true</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="errorIconDrawable">@drawable/ic_error_input</item>
        <item name="hintTextColor">@color/color_grey</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeColor">@color/color_grey</item>
    </style>

    <style name="Theme.Fab_Bottom_app_bar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#0F9D58</item>
        <item name="colorPrimaryVariant">#0F9D58</item>
        <item name="colorOnPrimary">#000</item>
    </style>

    <!-- TextField style -->
    <style name="Widget.MaterialComponents.TextInputEditText.DAS" parent="Widget.AppCompat.EditText">
        <item name="singleLine">true</item>
        <item name="android:padding">6dp</item>
        <item name="android:textColor">@color/purple_700</item>
        <item name="hintTextColor">@color/color_grey</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Dialogs-->
    <style name="DialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>


</resources>